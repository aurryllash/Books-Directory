<%- include('./partials/header')%>
    <style>
        @media(max-width: 1400px) {
  .card {
    margin: 10px;
    margin-left: 5px;
    height: 400px;
    max-width: 220px;
    padding: 20px 10px;
    border: none;
    position: relative;
    cursor: pointer;
  }
}
.product {
    margin-top: 50px;
    font-size: 16px;
}
.card {
    margin: 10px;
    margin-left: 5px;
    height: 400px;
    /* max-width: 240px; */
    /* padding-top: 20px; */
    padding: 20px 10px;
    border: none;
    position: relative;
    cursor: pointer;
  }
  
  .card-title {
    font-size: 24px;
    color: white;
  }
  .suthor {
    font-weight: 600;
  }
  ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
    display: flex;
    flex-wrap: wrap;
  }
  h6 {
    font-size: 16px;
  }
  button {
    border: none;
    padding: 5px 10px;
    width: 100px;
    font-size: 15px;
    font-weight: 700;
    background-color: rgb(59, 59, 59);
  }
  button:hover {
    background-color: rgb(252, 208, 208);
  }
  .delete-button {
    margin-left: 10px;
  }
    </style>
    <% if(result.length > 0) {%>
  <div class="product d-flex justify-content-center align-items-center">
    
    <ul>
        <% for(let i=0; i<result.length; i++) {%>
      <li *ngFor="let item of product">
          <div class="card border-4" style="width: 18rem; border: 1px solid white" >
            <div class="card-body">
              <h4 class="card-title">Title: <%= result[i].name %> </h4>
              <p class="author">Author: <%= result[i].author%> </p>
              <p class="release_year">Release year: <%= result[i].release_year %> </p>
              <p class="genres">genres: <%= result[i].genres %> </p>
            </div>
            <div class="buttons d-flex justify-content-center">
              <a href="/books/details/<%= result[i]._id%>"><button class="details-button">In Details</button></a>
              <button class="delete-button" data-id="<%= result[i]._id %>">Delete</button>
            </div>
          </div>
      </li>
      <% } %>
    </ul>
    
  </div>
  <% } else {%>
  <div class="container d-flex justify-content-center mt-4 vh-100">
    <h1>NOTHING MATCHES YOUR SEARCH!  </h1>
  </div>
  <%}%>

  <script>
    const deleteButtons = document.querySelectorAll("button.delete-button")

    deleteButtons.forEach(deleteButton => {
      deleteButton.addEventListener('click', () => {
      const id = deleteButton.dataset.id;

      fetch(`/books/${id}`, {
        method: 'DELETE'
      })
      .then(response => response.json())
      .then(response => {
        window.location.href = response.redirect
      })
      .catch(err => console.log(err))
    })

  })

  

  </script>
</body>
</html>